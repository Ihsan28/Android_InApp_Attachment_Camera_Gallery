<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ExoPlayerFragment">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/exo_player"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/discardVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/cancel_button_color"
                android:contentDescription="@string/crop_image_floating_button"
                android:src="@drawable/ic_cancel"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/saveVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/send_button_color"
                android:contentDescription="@string/crop_image_floating_button"
                android:src="@drawable/ic_send"
                app:borderWidth="0dp" />
        </RelativeLayout>
    </com.google.android.exoplayer2.ui.StyledPlayerView>

</RelativeLayout>